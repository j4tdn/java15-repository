<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- JDBC Properties -->
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/java15_shopping</property>
		<property name="connection.username">root</property>
		<property name="connection.password">1234</property>

		<!-- Hibernate Properties -->
		<!-- Configure display query language for JPA/Hibnerate -->
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<property name="show_sql">true</property>
		<property name="format_sql">false</property>

		<!-- Set the current session context getCurrentSession -->
		<property name="current_session_context_class">thread</property>
	
		<!-- 2nd level cache -->
		<!-- 2nd level cache -->
		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
		<property name="hibernate.cache.provider_configuration_file_resource_path">ehcache.xml</property>
	
		<!-- Entity Mapping -->
		<mapping class="persistence.ItemGroup"/>
		<mapping class="persistence.Item"/>
		<mapping class="persistence.ItemDetail"/>
		
	</session-factory>

</hibernate-configuration>